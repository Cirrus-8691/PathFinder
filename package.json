{
  "name": "pathfinder-backend",
  "version": "1.0.0",
  "description": "Node.js with Typescript path finder",
  "author": "cirrus-8691",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cirrus-8691/PathFinderService.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node ./src/main.ts",
    "watch": "tsc --watch --project ./tsconfig.test.json",
    "mocha:build": "tsc -p ./tsconfig.test.json",
    "mocha:run": "mocha --timeout 20000 .out/tests/_RunTests.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:cypress": "start-server-and-test start http://localhost:3000 cypress:run",
    "test": "npm-run-all -s mocha:build mocha:run test:cypress"
  },
  "dependencies": {
    "@types/chai": "^4.2.14",
    "@types/ejs": "^3.0.5",
    "@types/mocha": "^8.0.4",
    "chai": "^4.2.0",
    "ejs": "^3.1.5",
    "fastify": "^3.2.1",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "point-of-view": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.2",
    "cypress": "^6.0.0",
    "start-server-and-test": "^1.11.6",
    "ts-node": "^8.9.0",
    "typescript": "^4.0.3"
  }
}
